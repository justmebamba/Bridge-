// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Submission {
  id                      String    @id @default(cuid())
  tiktokUsername          String    @unique
  tiktokUsernameStatus    String    @default("pending") // pending, approved, rejected
  verificationCode        String?
  verificationCodeStatus  String    @default("pending")
  phoneNumber             String?
  phoneNumberStatus       String    @default("pending")
  finalCode               String?
  finalCodeStatus         String    @default("pending")
  isVerified              Boolean   @default(false)
  createdAt               DateTime  @default(now())
  rejectionReason         String?
}

model Admin {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  isVerified    Boolean   @default(false)
  isMainAdmin   Boolean   @default(false)
  createdAt     DateTime  @default(now())
}
